/**index.wxss**/

page {
    position: relative;
    background-color: #fff;
    padding: 0 0 90rpx;
    border-top: 2rpx solid #e8e8e8;
}

.others {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    margin-left: 18rpx;
    margin-right: 128rpx;
}

.others .avaterImg {
    height: 74rpx;
    width: 74rpx;
    margin-right: 10rpx;
    flex: 0 0 auto;
    border-radius: 50%;
    background-color: transparent;
}

.others view.blank {
    height: 74rpx;
    width: 74rpx;
    margin-right: 10rpx;
    flex: 0 0 auto;
    border-radius: 50%;
    background-color: transparent;
}

.others .loading {
    width: 160rpx;
    height: 20rpx;
    margin: 0;
    border-radius: 0;
}

.others view {
    background-color: #f6f6f6;
    box-sizing: border-box;
    font-size: 34rpx;
    padding: 18rpx;
    border-radius: 10rpx;
    color: #000;
}
.resImg{
    width: 100%;
    height: 100%;
}
.mysms {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-start;
    margin-top: 28rpx;
    margin-right: 18rpx;
    margin-left: 128rpx;
}

.mysms .avaterImg {
    height: 74rpx;
    width: 74rpx;
    margin-left: 10rpx;
    flex: 0 0 auto;
    border-radius: 50%;
}

.mysms view {
    background-color: #a0e75a;
    box-sizing: border-box;
    font-size: 34rpx;
    padding: 18rpx;
    border-radius: 10rpx;
    color: #000;
}

.sendsms {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 12rpx 18rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-top: 2rpx solid #e8e8e8;
}

.sendsms input {
    height: 66rpx;
    background-color: #eaeaea;
    border-radius: 10rpx;
    flex: 1;
    font-size: 30rpx;
    padding: 0 15rpx;
}

.sendsms button {
    width: 150rpx;
    height: 66rpx;
    line-height: 66rpx;
    flex: 0 0 auto;
    margin-left: 16rpx;
    font-size: 30rpx;
    background-color: #eaeaea;
}

.sms {
    margin-top: 28rpx;
}

.sms:first-child {
    margin-top: 0;
}

scroll-view {
    padding-top: 28rpx;
    box-sizing: border-box;
}

.mask {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
}

.authModal {
    width: 340rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    padding: 22rpx 0 0;
    box-sizing: border-box;
    border-radius: 10rpx;
    font-size: 30rpx;
}

.authModal image {
    width: 148rpx;
    height: 148rpx;
}

.authModal text {
    text-align: center;
    margin: 20rpx 22rpx;
    color: #f40;
}

.authModal button {
    padding: 0;
    margin: 0;
    width: 100%;
    background-color: #f40;
    color: #fff;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.authModal button::after {
    border: none;
}
