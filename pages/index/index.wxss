/**index.wxss**/
page {
    position: relative;
    background-color: #ebebeb;
    padding: 0 0 90rpx;
}

.others {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
    margin-left: 18rpx;
    margin-right: 128rpx;
}

.others image {
    height: 74rpx;
    width: 74rpx;
    margin-right: 10rpx;
    flex: 0 0 auto;
    border-radius: 50%;
}

.others view {
    background-color: #fff;
    box-sizing: border-box;
    font-size: 30rpx;
    padding: 18rpx;
    border-radius: 10rpx;
    color: #000;
}

.mysms {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    align-items: flex-start;
    margin-top: 28rpx;
    margin-right: 18rpx;
    margin-left: 128rpx;
}

.mysms image {
    height: 74rpx;
    width: 74rpx;
    margin-left: 10rpx;
    flex: 0 0 auto;
    border-radius: 50%;
}

.mysms view {
    background-color: #a0e75a;
    box-sizing: border-box;
    font-size: 30rpx;
    padding: 18rpx;
    border-radius: 10rpx;
    color: #000;
}

.sendsms{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 12rpx 18rpx;
    box-sizing: border-box;
    background-color: #f5f5f6;
}

.sendsms input{
    height: 66rpx;
    background-color: #fcfcfc;
    border-radius: 10rpx;
    flex: 1;
    font-size: 30rpx;
    padding: 0 10rpx;
}

.sendsms button{
    width: 150rpx;
    height: 66rpx;
    line-height: 66rpx;
    flex: 0 0 auto;
    margin-left: 16rpx;
    font-size: 30rpx;
}

.sms{
    margin-top: 28rpx;
}